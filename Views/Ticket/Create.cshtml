                <option value="hr">Human Resources</option>
                <option value="engineering">Engineering</option>
                <option value="finance">Finance</option>
                <option value="marketing">Marketing</option>
                <option value="sales">Sales</option>
            </select>
        </div>
        <div class="space-y-2">
            <label asp-for="Category" class="text-sm font-bold text-slate-700 dark:text-slate-300"></label>
            <select asp-for="Category" 
                    class="w-full bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg py-2.5 px-4 text-sm focus:ring-2 focus:ring-primary focus:border-primary transition-all text-slate-900 dark:text-white">
