<script>
    // Handle file upload click
    document.querySelector('.border-dashed').addEventListener('click', function() {
        document.querySelector('input[type="file"]').click();
    });

    // Handle drag and drop
    const dropZone = document.querySelector('.border-dashed');
    
    dropZone.addEventListener('dragover', function(e) {
        e.preventDefault();
        this.classList.add('bg-slate-100', 'dark:bg-slate-700');
    });
    
    dropZone.addEventListener('dragleave', function(e) {
        e.preventDefault();
        this.classList.remove('bg-slate-100', 'dark:bg-slate-700');
    });
    
    dropZone.addEventListener('drop', function(e) {
        e.preventDefault();
        this.classList.remove('bg-slate-100', 'dark:bg-slate-700');
        
        const files = e.dataTransfer.files;
        document.querySelector('input[type="file"]').files = files;
        
        // Update UI to show selected files
        const fileNames = Array.from(files).map(f => f.name).join(', ');
        const fileNameDisplay = this.querySelector('.text-center p:first-child');
        if (files.length > 0) {
            fileNameDisplay.textContent = `${files.length} file(s) selected: ${fileNames}`;
        }
    });
</script>
